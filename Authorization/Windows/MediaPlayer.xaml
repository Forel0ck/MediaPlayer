<Window x:Class="Authorization.Windows.MediaPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Authorization.Windows"
        mc:Ignorable="d"
        Title="MediaPlayer" Height="720" Width="1280"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize"
        
        Loaded="Window_Loaded">
    <Border Background="Black"
            CornerRadius="20">
        <Grid  x:Name="RootGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.15*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <MediaElement x:Name="mpMyl" 
                      Grid.RowSpan="2"
                      Grid.ColumnSpan="3"
                         
                      MediaOpened="mpMyl_MediaOpened"
             />
            <Button Width="150"
                Height="100"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10"
                Content="Exit"
                x:Name="Exit"
                Click="Exit_Click"
                FontSize="40" 
                FontFamily="Rockwell Condensed" 
                BorderBrush="{x:Null}"
                Foreground="White"
                Background="{x:Null}"                   
            />
            <WrapPanel
                Grid.Row="1"
                VerticalAlignment="Center"
                Margin="20 0 0 0"
                >
                <Image x:Name="Rewind"
                    Width="24"
                    Height="24"
                    MouseLeftButtonDown="Rewind_MouseLeftButtonDown"  
                    Source="/Images\Rewind.png"
                />
                <Image x:Name="Go"
                    Width="24"
                    Height="24"
                    MouseLeftButtonDown="Go_MouseLeftButtonDown"  
                    Source="/Images\Play.png"
                />
                <Image x:Name="FastFwd"
                    Width="24"
                    Height="24"
                    MouseLeftButtonDown="FastFwd_MouseLeftButtonDown"  
                    Source="/Images\Fast Fwd.png"
                />
            </WrapPanel>

            <Button
            Width="150"
            Height="100"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Margin="10 5"
            Content="Browse"
            Click="Button_Click"
            Grid.Column="2"
            FontSize="40" 
            FontFamily="Rockwell Condensed" 
            Background="{x:Null}" 
            BorderBrush="{x:Null}"
            Foreground="White"
            />

            <Slider Grid.Row="1"
                Grid.Column="1"
                VerticalAlignment="Center"
                x:Name="slideravance"
                IsMoveToPointEnabled="True" 
                Foreground="White"
                Maximum="1"
                Height="20"
                Margin="25 0 50 0"
                MouseLeftButtonUp="slideravance_MouseLeftButtonUp"
                VerticalContentAlignment="Center"
            />
            <Label x:Name="lbTime"
               Grid.Row="1"
               Grid.Column="1"
               Height="50"
               Width="50"
               VerticalAlignment="Center"
               HorizontalAlignment="Right"
               Foreground="White"
               FontSize="20"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
            />
            <WrapPanel
                Grid.Row="1"
                Grid.Column="2"
                VerticalAlignment="Center"
                >
                <Image x:Name="Vol"
                    Width="24"
                    Height="24"
                    Margin="10" 
                    MouseLeftButtonDown="Vol_MouseLeftButtonDown"  
                    Source="/Images\Volume Up.png"
                >
                </Image>

                <Slider x:Name="SliderVol"
                    Height="20"
                    IsMoveToPointEnabled="True" 
                    Foreground="White"
                    Width="150"
                    ValueChanged="SliderVol_ValueChanged"
                    Value="50" 
                    Minimum="0"
                    Maximum="100" BorderBrush="{x:Null}" 
                    
                />
                <Image x:Name="Full"
                    Width="24"
                    Height="24"
                    Margin="10" 
                    MouseLeftButtonDown="Full_MouseLeftButtonDown"  
                    Source="/Images\cross.png"
                />

            </WrapPanel>

        </Grid>
    </Border>
</Window>
